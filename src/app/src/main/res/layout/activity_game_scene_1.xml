<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Scenes"
    android:keepScreenOn="true"
    android:id="@+id/background">

    <MediaController
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mediaController"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="第一章－遊戲開始"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="時間：晚上\n\n地點：娃娃店\n\n人物：瑪莉，彼得 "
        android:id="@+id/textView5"
        android:layout_above="@+id/mediaController"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="內容大章:\n瑪莉醒來看見自己身處於娃娃店，看見自己是一隻被放在櫥窗裹的人偶，正想活動時發現自己動彈不得，她想發聲求救，但因自己是人偶的關係而無法發出聲音，只好望向同樣被放在櫥窗裹的人偶求助。 此時指針指向12，不能動的身體終於能動，她正對此感到疑惑的時候，和她同樣被放在櫥窗裹的人偶緩緩地說「你是新的受害者呢......」一個叫彼得的人偶對她說。"
        android:id="@+id/textView6"
        android:layout_below="@+id/mediaController"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="繼續"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
